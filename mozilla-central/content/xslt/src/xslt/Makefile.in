FORCE_STATIC_LIB = 1

EXTRA_COMPONENTS = \
  txEXSLTRegExFunctions.js \
  txEXSLTRegExFunctions.manifest \
  $(NULL)

include $(topsrcdir)/config/rules.mk

INCLUDES += \
	-I$(srcdir) \
	-I$(srcdir)/../base \
	-I$(srcdir)/../xml \
	-I$(srcdir)/../xpath \
	-I$(srcdir)/../../../base/src \
