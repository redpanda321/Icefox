libs::
	rm -rf $(TESTXPI)
	$(NSINSTALL) -D $(TESTXPI)
	if [ -d $(ADDONSRC) ]; then \
		$(EXIT_ON_ERROR) \
		for dir in $(ADDONSRC)/*; do \
			base=`basename $$dir` ; \
			(cd $$dir && zip $(TESTXPI)/$$base.xpi *) \
		done \
	fi
