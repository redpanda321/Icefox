include protocol PNecko;

include "mozilla/net/NeckoMessageUtils.h";

using mozilla::void_t;

struct JSError {
  nsString message;
  nsString filename;
  uint32_t lineNumber;
  uint32_t columnNumber;
};

union SendableData {
  uint8_t[];
  nsString;
};

union CallbackData {
  void_t;
  SendableData;
  JSError;
};

namespace mozilla {
namespace net {

//-------------------------------------------------------------------
protocol PTCPSocket
{
  manager PNecko;

parent:
  Data(SendableData data);
  Suspend();
  Resume();
  Close();
  RequestDelete();

child:
  Callback(nsString type, CallbackData data,
           nsString readyState, uint32_t bufferedAmount);
  __delete__();
};


} // namespace net
} // namespace mozilla

