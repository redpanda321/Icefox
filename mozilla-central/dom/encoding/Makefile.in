DEPTH		= @DEPTH@
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@
FAIL_ON_WARNINGS := 1

include $(DEPTH)/config/autoconf.mk

MODULE		= dom
LIBRARY_NAME	= domencoding_s
LIBXUL_LIBRARY	= 1
FORCE_STATIC_LIB = 1

DIRS = \
  test \
  $(NULL)

EXPORTS_NAMESPACES = mozilla/dom
EXPORTS_mozilla/dom = \
  EncodingUtils.h \
  TextDecoder.h \
  TextDecoderBase.h \
  TextEncoder.h \
  TextEncoderBase.h \
  $(NULL)

CPPSRCS = \
	EncodingUtils.cpp \
	TextDecoder.cpp \
	TextEncoder.cpp \
	$(NULL)

LOCAL_INCLUDES = \
	-I$(topsrcdir)/intl/locale/src \
	$(NULL)

include $(topsrcdir)/dom/dom-config.mk
include $(topsrcdir)/config/config.mk
include $(topsrcdir)/config/rules.mk

EncodingUtils.$(OBJ_SUFFIX): labelsencodings.properties.h

PROPS2ARRAYS = $(topsrcdir)/intl/locale/src/props2arrays.py
labelsencodings.properties.h: $(PROPS2ARRAYS) labelsencodings.properties
	$(PYTHON) $^ $@

GARBAGE += \
	charsetalias.properties.h \
	$(NULL)
