DEPTH = @DEPTH@
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/config/autoconf.mk
include $(srcdir)/../objs.mk

EXTRA_DEPS += $(srcdir)/../objs.mk

MODULE = mtransport_s
LIBRARY_NAME = mtransport_s
FORCE_STATIC_LIB= 1
ifeq (WINNT,$(OS_TARGET))
VISIBILITY_FLAGS =
endif

SRCS_IN_OBJDIR	= 1

EXPORTS_NAMESPACES = mtransport

EXPORTS_mtransport = \
  ../dtlsidentity.h \
  ../nricectx.h \
  ../nricemediastream.h \
  ../transportflow.h \
  ../transportlayer.h \
  ../transportlayerdtls.h \
  ../transportlayerice.h \
  ../transportlayerlog.h \
  ../transportlayerloopback.h \
  ../transportlayerprsock.h \
  $(NULL)

CPPSRCS = \
	$(MTRANSPORT_LCPPSRCS) \
	$(NULL)


# Make a copy into the local directory for dual compilation
export:: $(MTRANSPORT_CPPSRCS)
	$(INSTALL) $^ .

# for stun.h
ifeq (WINNT,$(OS_TARGET))
DEFINES += \
  -DWIN32 \
  -DNOMINMAX \
  $(NULL)
else ifeq (Linux,$(OS_TARGET))
DEFINES += -DLINUX
endif

include $(srcdir)/../objs.mk

include $(topsrcdir)/config/rules.mk
