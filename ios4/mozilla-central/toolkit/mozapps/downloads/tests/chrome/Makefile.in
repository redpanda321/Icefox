  test_privatebrowsing_title.xul \
  test_ui_stays_open_on_alert_clickback.xul \
  test_unknownContentType_dialog_layout.xul \
  test_bug_412360.xul \
  test_bug_429247.xul \
  test_bug_462172.xul \
  test_close_on_last_window.xul \
