include $(DEPTH)/config/autoconf.mk
include $(topsrcdir)/config/rules.mk

_TEST_FILES = \
		test_bug332636.html \
		test_bug332636.html^headers^ \
		test_bug366682.html \
		test_bug432225.html \
		test_bug455992.html \
		test_bug456244.html \
		test_bug478725.html \
		test_bug480972.html \
		test_bug484181.html \
		test_bug487524.html \
		test_bug520189.html \
