include protocol PContent;

namespace mozilla {
namespace dom {

protocol PAudio
{
  manager PContent;

parent:

  Write(nsCString data, PRUint32 frames);

  SetVolume(float aVolume);

  MinWriteSize();
  Drain();

  Pause();
  Resume();
  Shutdown();

 child:

  __delete__();

  PositionInFramesUpdate(PRInt64 position, PRInt64 time);
  MinWriteSizeDone(PRInt32 frameCount);
  DrainDone();
  WriteDone();
};

} // namespace dom
} // namespace mozilla
