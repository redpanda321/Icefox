include $(DEPTH)/config/autoconf.mk

MODULE		= widget
LIBRARY_NAME	= widget_shared
LIBXUL_LIBRARY  = 1


DEFINES += \
  -D_IMPL_NS_WIDGET \
  $(NULL)

