		-I$(srcdir) \
		-I$(srcdir)/../../../../../../content/events/src \
		-I$(srcdir)/../../../../base/src \
		-I$(srcdir)/../../../../../base \
		-I$(srcdir)/../../../../../generic \
		-I$(srcdir)/../../../../../style \
		-I$(srcdir)/../../../../../forms \
		$(NULL)

