include $(DEPTH)/config/autoconf.mk

MODULE		= layout
LIBRARY_NAME	= gkxultree_s
LIBXUL_LIBRARY  = 1

CPPSRCS		= \
		nsTreeBodyFrame.cpp \
		nsTreeBoxObject.cpp \
		nsTreeColFrame.cpp \
		nsTreeColumns.cpp \
		nsTreeContentView.cpp \
