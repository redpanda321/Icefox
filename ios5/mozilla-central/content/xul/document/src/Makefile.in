		  -I$(srcdir)/../../../../layout/style \
		  -I$(srcdir)/../../../../layout/xul/base/src \
		  -I$(srcdir)/../../../xml/document/src \
		  -I$(srcdir)/../../../xbl/src \
		  -I$(srcdir)/../../../events/src \
		  -I$(topsrcdir)/xpcom/ds \
		  -I$(topsrcdir)/dom/base \
		  $(NULL)

DEFINES += -D_IMPL_NS_LAYOUT
