include $(DEPTH)/config/autoconf.mk

MODULE		= xuldoc
LIBRARY_NAME	= gkconxuldoc_s
LIBXUL_LIBRARY	= 1


CPPSRCS		= nsXULControllers.cpp

ifdef MOZ_XUL
